<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E0E6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idealyticapps.mousepad.activity.MousePad" >

    <Button
        android:id="@+id/leftClick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/rightClick"
        android:layout_alignBottom="@+id/rightClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/leftclick_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="leftClick"
        android:text="@string/leftClick"
        android:textColor="#fff" />

    <Button
        android:id="@+id/rightClick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/leftclick_button"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="rightClick"
        android:text="@string/rightClick"
        android:textColor="#fff" />

</RelativeLayout>